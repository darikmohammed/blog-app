<h1>Current Available Users</h1>
<h3>Select one to see there detailed post.</h3>

<div>
  <% @users.each do |user|%>
  <div>
    <div>
      <%= image_tag user.photo %>
    </div>
    <h2>
      <%= user.name %>
    </h2>
    <p>
      <%= user.posts_counter %>
      posts
    </p>
  </div>
  <% end %>
</div>
