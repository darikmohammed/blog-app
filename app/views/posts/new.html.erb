<div class='flex flex-col gap-4 mt-4'>
  <h1 class=' text-2xl'>New post</h1>
  <div class=' flex gap-8 items-center'>
    <img src="<%= @user.photo %>>" alt="<%= @user.name %>>" class='w-32 h-32 rounded-full'>
    <h1 class=' text-2xl'><%= @user.name %></h1>
  </div>

    <%= form_with model: @post, url: user_posts_path  do |form| %>
      <div class = 'flex flex-col gap-4'>
        <div class='flex gap-8 items-center'>
          <%= form.label :title, "Title: " %>
          <%= form.text_field :title, class: 'rounded-full' %>
        </div>
        <div class='flex gap-8 items-center'>
          <%= form.label :text, "Text: " %>
          <%= form.text_field :text, class: 'rounded-full' %>
        </div>
        <div>
          <%= form.submit 'Submit Post', class: 'shadow-md shadow-slate-400 p-4 rounded-md self-start' %>
        </div>
      </div>
      
    <% end %>
</div>
