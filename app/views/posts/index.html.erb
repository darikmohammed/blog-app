<div>
  <div>
    <div>
      <%= image_tag @user.photo %>
    </div>
    <div>
      <h2><%= @user.name %></h2>
      <p><%= @user.posts_counter %></p>
    </div>
  </div>

  <div>
    <% @posts.each_with_index do |post, idx| %>
      <div>
        <div>
          <p>Post <%=  idx + 1 %></p>
          <h2><%= post.title %></h2>
          <p><%=  post.text %></p>
          <div>
            <p><%= post.comments_counter %> Comments</p>
            <p><%= post.likes_counter %> Likes</p>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>